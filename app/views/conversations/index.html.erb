<div class="ui-segment">

  <%= link_to 'Home', root_path, method: 'get'%>  
  <h3>Conversations</h3>
  
  <div class="ui-list">
    <div class=”item”>
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id ||      conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <%= link_to recipient.username, conversation_messages_path(conversation)%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="ui-segment">
  
  <h3>Participants</h3>
  
  <div class="ui-list">
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class=”item”>
          <%= link_to 'Text ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%> <%= user.username %> <%= user.profile_picture %> 
        </div>
      <% end %>
    <% end %>
  </div>
</div>