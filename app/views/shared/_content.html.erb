<!-- Content -->
  <div class="container">

    <div class="header">
      <h2>The most recent meet ups</h2>
      <p>Browse to find your next training session</p>
    </div>

      <section class="events-list-scroll">
          <div class="scroll-wrapper">
              <div class="scroll-container">
                  <div class="events-container-scroll">
                      <% @events.each do |event| %>
                      <div class="events-grid-scroll">
                          <div class="events-element-scroll">
                              <div class="events-image-scroll">
                                <% if event.activity.activity_name == "Futsal" %>
                                    <%= image_tag 'futsal_event.jpg', :class => "picture-activity-scroll" %>
                                <% end %>
                                <% if event.activity.activity_name == "Basketball" %>
                                    <%= image_tag 'basket_event.jpg', :class => "picture-activity-scroll" %>
                                <% end %>
                                <% if event.activity.activity_name == "Running" %>
                                    <%= image_tag 'run_event.jpg', :class => "picture-activity-scroll" %>
                                <% end %>
                                <% if event.activity.activity_name == "Cyclisme" %>
                                    <%= image_tag 'cycling_event.jpg', :class => "picture-activity-scroll" %>
                                <% end %>
                                <% if event.activity.activity_name == "Football" %>
                                    <%= image_tag 'soccer_event.jpg', :class => "picture-activity-scroll" %>
                                <% end %>
                              </div>
                              <div class="events-content-scroll">
                                  <time class="events-period-scroll">
                                      <%= event.date.strftime("%a, %d %b") %> AT <%= event.time.strftime("%H:%M") %>
                                  </time>
                                  <div class="events-title-scroll"><%= event.name %></div>
                                  <div class="events-description-scroll">
                                      <p><%= event.location.place_name %> <%= event.location.city %></p>
                                      <p><%= event.activity.activity_name %> - <%= event.nb_participant %> people</p>
                                      <p>Level: <%= event.level %> - Price: <%= number_to_currency(event.price) %></p>
                                  </div>
                                  <div class="events-footer-scroll">
                                      <%= link_to 'Read More', "/event/"+event.id.to_s %>
                                  </div>
                              </div>
                          </div>
                      </div>
                      <% end %>
                  </div>
              </div>
          </div>
      </section>
  </div>
