<!-- Main wrapper -->
<div class="wrapper">
  <!-- Navbar -->
  <%= render 'shared/navbar' %>

    <body>  <!-- Body container -->

        <div class="form-container"><!-- Container for the form -->
          <div class="title-container">
            <h2>Log in</h2>
              <div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="container-name">
                  <div class="field">
                    <%= f.email_field :email, placeholder:'Email', autofocus: true, autocomplete: "email" %>
                  </div>

                  <div class="field">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password" %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me%>
                  <%= f.label :remember_me %>
                </div>
                <% end -%><!-- End of devise_mapping -->

                <div class="actions">
                  <%= f.submit "Log in", :class=> "btn-primary" %>
                </div>

              <% end %><!-- End of form_for -->

              <%= render "devise/shared/links" %><!-- check_box -->
            </div>
          </div>
        </div><!-- End for container for the form -->






    </body>  <!-- End for Body container -->

      <%= render 'shared/footer' %>

</div> <!--End of wrapper -->
