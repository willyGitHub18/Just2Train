
      <%= render 'shared/navbar' %>

      <div id="container-body">
        <div class="form-container">
          <div class="title-container">
            <h2>Log in</h2>
              <div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="container-name">
                <div class="field">
                  <%= f.email_field :email, placeholder:'Email', autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password" %>
                </div>
              </div>

              <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me%>
                <%= f.label :remember_me %>
              </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", :class=> "btn-primary" %>
              </div>

                <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>


      <section id="section4" class="footer">
        <%= render 'shared/footer' %>
      </section>

</div> <!--End of wrapper -->
