<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    * <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    * <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>

  <div class="area">
    <%= f.label :description %><br />
    <%= f.text_area :description, autocomplete: "description" %>
  </div>

  <div class="field">
    <%= f.label :street1 %><br />
    <%= f.text_field :street1, autocomplete: "street1" %>
  </div>

  <div class="field">
    <%= f.label :street2 %><br />
    <%= f.text_field :street2, autocomplete: "street2" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip, autocomplete: "zip" %>
  </div>

  <div class="field">
    * <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    * <%= f.label :phone %><br />
    <%= f.text_field :phone, autocomplete: "phone" %>
  </div>

  <div class="field">
    * <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    * <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
