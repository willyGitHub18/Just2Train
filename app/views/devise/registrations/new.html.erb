

<%= render 'shared/navbar' %>

<div class="container">
  <div class="form-container">
    <div class="title-container">
      <h2>Sign up</h2>
    <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <p>Personal information</p>

        <div class="container-name">
          <div class="field">
            <%= f.text_field :first_name, placeholder: "First Name (Require)", autofocus: true, autocomplete: "first_name" %>
          </div>

          <div class="field">
            <%= f.text_field :last_name,placeholder: "Last Name (Require)", autocomplete: "last_name" %>
          </div>
        </div>

        <div class="area">
          <%= f.text_area :description, placeholder: "About you", autocomplete: "description" %>
        </div>

        <div class="field">
          <%= f.text_field :phone, placeholder:"Phone number (Require)", autocomplete: "phone" %>
        </div>

        <div class="field">
          <%= f.email_field :email, placeholder:"Email (Require)", autocomplete: "email" %>
        </div>

        <div class="field">
            <%= f.password_field :password, placeholder:'Password (6 characters minimum)', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation,placeholder:"Password Confirmation (Require)", autocomplete: "new-password" %>
        </div>

      <div class="container-adress">
        <p>Adress information</p>

        <div class="field">
          <%= f.text_field :street1, placeholder:"Steet 1", autocomplete: "street1" %>
        </div>

        <div class="field">
          <%= f.text_field :street2, placeholder: "Street 2", autocomplete: "street2" %>
        </div>

        <div class="field">
          <%= f.text_field :city, placeholder: "City", autocomplete: "city" %>
        </div>

        <div class="field">
          <%= f.text_field :zip, placeholder:"Zip", autocomplete: "zip" %>
        </div>

      </div>


  <div class="actions">
    <%= f.submit "Sign up", :class=> "btn-primary" %>
  </div>

<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>


<section id="section4" class="footer">
  <%= render 'shared/footer' %>
</section>
