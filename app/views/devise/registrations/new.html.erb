<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <p>Fields with * require to be filled</p>
  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder:'* Username', autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.text_field :full_name, placeholder:'Full Name, ex : John Wick', autocomplete: "full_name" %>
  </div>

  <div class="area">
    <%= f.text_area :biography, placeholder:'Biography', autocomplete: "biography" %>
  </div>

  <div class="field">
    <%= f.text_field :street1, placeholder:'Street 1', autocomplete: "street1" %>
  </div>

  <div class="field">
    <%= f.text_field :street2, placeholder:'Street 2', autocomplete: "street2" %>
  </div>

  <div class="field">
    <%= f.text_field :city, placeholder:'City', autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.text_field :zip, placeholder:'Zip Code', autocomplete: "zip" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder:'* E-mail Adress', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.text_field :phone, placeholder:'* Phone Number', autocomplete: "phone" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder:'* Password', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:'* Password Confirmation', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
